---
import Profile from './Profile.astro';

const { title } = Astro.props;
---

<Profile title={title}>
  <div class="sm:hidden sm:w-1/3 text-center sm:pl-8 sm:py-8">
    <div class="w-48 h-48 inline-flex items-center align-middle justify-center">
      
      <div class="flex h-full w-full shadow-md">
        <slot name="image"></slot>
      </div>
    
    </div>
  </div>

  <div class="flex flex-col items-center sm:flex-row">
    <div class="sm:w-2/3 sm:pr-8 sm:py-8 sm:border-r-2 border-gray-400 sm:border-t-0 border-t mt-4 pt-4 sm:mt-0 text-center sm:text-left">
    
      <slot name="content"></slot>
    
    </div>

    <div class="hidden sm:flex sm:w-1/3 text-center sm:pl-8 sm:py-8">
      <div class="w-48 h-48 inline-flex items-center align-middle justify-center">
    
        <div class="flex h-full w-full shadow-md">
          <slot name="image"></slot>
        </div>
    
      </div>
    </div>
</Profile>