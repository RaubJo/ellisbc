---
import NavLink from "../components/NavLink.astro";

import facebookLogo from '/facebook.svg';
import emailLogo from '/email.svg';

const facebookPage = "https://www.facebook.com/www.ellisbc.org"
const media = "https://www.facebook.com/www.ellisbc.org/videos/"
const youtube = "https://www.youtube.com/"
const pastorEmail = "pastor@ellisbc.org"
const email = "mailto:" + pastorEmail
---

<section class="w-full px-6 mt-4 antialiased bg-white">
    <div class="flex flex-row mx-auto max-w-7xl border-t border-gray-300 justify-evenly">
        <NavLink href="/">Home</NavLink>
        <NavLink href="/about/us">About Us</NavLink>
        <NavLink href={media}>Media</NavLink>
        <NavLink href="#_">Contact Us</NavLink>
    </div>
    <div class="flex flex-row justify-center mb-2">
        <a href={facebookPage} class="mx-2">
            <i class="fa-brands fa-facebook fa-lg"></i>
        </a>
        <a href={email} class="mx-2">
            <i class="fa-regular fa-envelope fa-lg"></i>
        </a>
        <a href={youtube} class="mx-2 hidden">
            <i class="fa-brands fa-youtube fa-lg"></i>
        </a>
    </div>
    <div class="flex flex-row justify-center">
        <span class="text-sm text-gray-500">Copyright <i class="fa-regular fa-copyright"></i> 2023 All Rights Reserved</span>
    </div>
</section>