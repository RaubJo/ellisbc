---
import NavLink from "../components/NavLink.astro";

const YouTube = ""
const FacebookProfile = "https://www.facebook.com/www.ellisbc.org"
const PushPay = "https://www.ellisbc.org/https://pushpay.com/g/ellisbc?src=hpp"
const media = FacebookProfile + "/videos/"
const PastorEmail = "pastor@ellisbc.com"
const email = "mailto:" + PastorEmail
---

<section class="w-full px-6 mt-4 antialiased bg-white">
    <div class="flex flex-row mx-auto max-w-7xl border-t border-gray-300 justify-evenly">
        <NavLink href="/">Home</NavLink>
        <NavLink href="/about/us">About Us</NavLink>
        <NavLink href={media}>Media</NavLink>
        <NavLink href="/contact/us">Contact Us</NavLink>
        <NavLink href={PushPay}>Give Online</NavLink>
    </div>
    <div class="flex flex-row justify-center mb-2">
        <a href={FacebookProfile} class="mx-2">
            <i class="fa-brands fa-facebook fa-lg"></i>
        </a>
        <a href={email} class="mx-2">
            <i class="fa-regular fa-envelope fa-lg"></i>
        </a>
        <a href={YouTube} class="mx-2 hidden">
            <i class="fa-brands fa-youtube fa-lg"></i>
        </a>
    </div>
    <div class="flex flex-row justify-center">
        <span class="text-sm text-gray-500 py-4">Copyright <i class="fa-regular fa-copyright"></i> 2023 All Rights Reserved</span>
    </div>
</section>